global text05_1, text05_2, text05_3, text05_4, text05_5, text05_6, text05_7, text05_8, text05_9, text05_10, text05_11, text05_12, text05_13, text05_14, text05_15, text05_16, text05_17
global text01, text02, text03, text04, text05, edit01, edit02, self_edit, auto_edit, self01, auto01, auto02, auto03, active01, active02, active03, now_page, max_page, button01, button02, button03, button04, button05, button06, button07, button08, result_Question, order, version := "0.1.0"
global ID_value, AS_status, result_Answer, progress01
